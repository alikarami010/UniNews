<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="45"
        android:orientation="horizontal"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:weightSum="100"
        tools:ignore="DisableBaselineAlignment,InefficientWeight,RtlSymmetry,UselessParent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            tools:ignore="NestedWeights">

            <TextView
                android:id="@+id/tetleNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عبدالله ناصری"
                android:textColor="@color/TitleColor"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/DisNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="دانشجویان عزیز جلسه آینده امتحان میان ترم برگذار می گردد."
                android:textColor="@color/Description"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@color/colorAccent"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgNew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/face12"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>